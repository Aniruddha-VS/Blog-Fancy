---
import "../styles/global.css";
import { AstroSeo } from "@astrolib/seo";
import { Image } from "astro:assets";
import { getImage } from "astro:assets";
import type { ImageMetadata } from "astro";
import type { OpenGraph } from "astro-seo";

interface Props {
  title?: string;
  description?: string;
  image?: string | ImageMetadata;
  canonicalURL?: string;
  noIndex?: boolean;
  type?: "website" | "article";
  openGraph?: OpenGraph;
}

const {
  title,
  description,
  image,
  canonicalURL = new URL(
    Astro.url.pathname,
    'https://aniruddhasurse.netlify.app'
  ).toString(),
  noIndex = false,
  type = "website",
  openGraph,
} = Astro.props;

// Use provided image or default
const finalImage = image || {
  src: "/og-image.jpg",
  width: 1200,
  height: 630,
  format: "jpg"
};
---

<!-- Critical CSS -->
<style is:inline>
  /* Add critical CSS here */
  body {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.5;
    margin: 0;
    padding: 0;
  }
  .font-display {
    font-family: 'Gilda Display', serif;
  }
</style>

<!-- DNS prefetch and preconnect -->
<link rel="dns-prefetch" href="https://fonts.googleapis.com" />
<link rel="dns-prefetch" href="https://fonts.gstatic.com" />
<link rel="dns-prefetch" href="https://www.googletagmanager.com" />
<link rel="dns-prefetch" href="https://rsms.me" />
<link rel="dns-prefetch" href="https://api.fontshare.com" />

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link rel="preconnect" href="https://www.googletagmanager.com" />
<link rel="preconnect" href="https://rsms.me" />
<link rel="preconnect" href="https://api.fontshare.com" />

<!-- Viewport optimization -->
<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />

<AstroSeo
  title={title || "Aniruddha Surse | Personal Blog & Portfolio"}
  description={description || "Official website of Aniruddha Surse. Explore my blog posts, projects, and professional journey. Software developer, tech enthusiast, and content creator."}
  canonical={canonicalURL}
  openGraph={{
    url: canonicalURL,
    title: title || "Aniruddha Surse | Personal Blog & Portfolio",
    description: description || "Official website of Aniruddha Surse. Explore my blog posts, projects, and professional journey. Software developer, tech enthusiast, and content creator.",
    images: [
      {
        url: "https://aniruddhasurse.netlify.app/og-image.jpg",
        width: 1200,
        height: 630,
        alt: "Aniruddha Surse - Personal Website",
        type: "image/jpeg",
      },
    ],
    site_name: "Aniruddha Surse",
    type: type,
    locale: "en_US",
  }}
  twitter={{
    handle: "@aniruddhasurse",
    site: "@aniruddhasurse",
    cardType: "summary_large_image",
  }}
/>

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />

<!-- Basic Meta Tags -->
<meta name="generator" content={Astro.generator} />
<meta name="description" content="Official website of Aniruddha Surse. Explore my blog posts, projects, and professional journey. Software developer, tech enthusiast, and content creator." />
<meta name="author" content="Aniruddha Surse" />
<meta name="keywords" content="Aniruddha Surse, software developer, tech blog, portfolio, web development, programming" />
<title>Aniruddha Surse | Personal Blog & Portfolio</title>

<!-- Favicons - Comprehensive setup for all platforms -->
<link rel="icon" href="/favicons/favicon.ico" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png" />
<link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png" />
<link rel="manifest" href="/favicons/site.webmanifest" />
<meta name="msapplication-TileColor" content="#ffffff" />
<meta name="msapplication-TileImage" content="/favicons/mstile-144x144.png" />
<meta name="theme-color" content="#ffffff" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title || "Aniruddha Surse | Personal Blog & Portfolio"} />
<meta property="og:description" content={description || "Official website of Aniruddha Surse. Explore my blog posts, projects, and professional journey. Software developer, tech enthusiast, and content creator."} />
<meta property="og:image" content="https://aniruddhasurse.netlify.app/og-image.jpg" />
<meta property="og:site_name" content="Aniruddha Surse" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title || "Aniruddha Surse | Personal Blog & Portfolio"} />
<meta property="twitter:description" content={description || "Official website of Aniruddha Surse. Explore my blog posts, projects, and professional journey. Software developer, tech enthusiast, and content creator."} />
<meta property="twitter:image" content="https://aniruddhasurse.netlify.app/og-image.jpg" />
<meta property="twitter:creator" content="@aniruddhasurse" />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Additional SEO -->
<meta name="robots" content="index, follow, max-image-preview:large" />
<meta name="googlebot" content="index, follow, max-image-preview:large" />
<meta name="google" content="notranslate" />
<meta name="revisit-after" content="7 days" />
<meta name="rating" content="general" />

<!-- For IE -->
<meta http-equiv="X-UA-Compatible" content="IE=edge" />

<!-- Font stylesheets with display swap -->
<link rel="stylesheet" href="https://rsms.me/inter/inter.css" media="print" onload="this.media='all'" />
<link href="https://api.fontshare.com/v2/css?f[]=jet-brains-mono@1,2&display=swap" rel="stylesheet" media="print" onload="this.media='all'" />
<link href="https://fonts.googleapis.com/css2?family=Gilda+Display&display=swap" rel="stylesheet" media="print" onload="this.media='all'" />

<!-- Fallback for browsers that don't support onload -->
<noscript>
  <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
  <link href="https://api.fontshare.com/v2/css?f[]=jet-brains-mono@1,2&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Gilda+Display&display=swap" rel="stylesheet" />
</noscript>

<!-- Alpine.js from CDN -->
<script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>

<!-- Structured Data for Person -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Aniruddha Surse",
  "url": "https://aniruddhasurse.netlify.app/",
  "sameAs": [
    "https://www.linkedin.com/in/aniruddha-surse",
    "https://www.instagram.com/aniruddha.surse/",
    "https://github.com/aniruddhasurse"
  ],
  "jobTitle": "Software Developer",
  "worksFor": {
    "@type": "Organization",
    "name": "Self-employed"
  },
  "description": "Software developer, tech enthusiast, and content creator. Exploring web development, programming, and technology."
}
</script>

<!-- Structured Data for WebSite -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Aniruddha Surse",
  "url": "https://aniruddhasurse.netlify.app/",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://aniruddhasurse.netlify.app/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
}
</script>

<!-- Google Analytics -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-1ZSNSMHV14"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', 'G-1ZSNSMHV14');
</script>
