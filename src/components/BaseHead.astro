---
import "../styles/global.css";
import { AstroSeo } from "@astrolib/seo";

const { title, description, image, article, canonicalURL } = Astro.props;
---

<!-- Critical CSS -->
<style is:inline>
  /* Add critical CSS here */
  body {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.5;
    margin: 0;
    padding: 0;
  }
  .font-display {
    font-family: 'Gilda Display', serif;
  }
</style>

<!-- Preload critical fonts -->
<link rel="preload" href="/fonts/inter.css" as="style" />
<link rel="preload" href="/fonts/GildaDisplay-Regular.woff2" as="font" type="font/woff2" crossorigin />

<!-- Defer non-critical CSS -->
<link rel="stylesheet" href="/styles/global.css" media="print" onload="this.media='all'" />
<noscript><link rel="stylesheet" href="/styles/global.css" /></noscript>

<!-- Preload critical images -->
<link rel="preload" as="image" href="/images/hero-mobile.webp" media="(max-width: 768px)" />
<link rel="preload" as="image" href="/images/hero-desktop.webp" media="(min-width: 769px)" />

<!-- DNS prefetch and preconnect -->
<link rel="dns-prefetch" href="https://rsms.me" />
<link rel="dns-prefetch" href="https://fonts.googleapis.com" />
<link rel="dns-prefetch" href="https://fonts.gstatic.com" />
<link rel="dns-prefetch" href="https://unpkg.com" />

<link rel="preconnect" href="https://rsms.me" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link rel="preconnect" href="https://unpkg.com" />

<!-- Performance Monitoring -->
<script>
  // Monitor LCP
  new PerformanceObserver((list) => {
    const latestEntry = list.getEntries().at(-1);
    if (latestEntry?.element?.getAttribute('loading') === 'lazy') {
      console.warn('Warning: LCP element was lazy loaded', latestEntry);
    }
  }).observe({type: 'largest-contentful-paint', buffered: true});

  // Monitor FCP
  new PerformanceObserver((list) => {
    const latestEntry = list.getEntries().at(-1);
    console.log('FCP:', latestEntry.startTime);
    // Send to analytics if needed
  }).observe({type: 'first-contentful-paint', buffered: true});
</script>

<!-- Self-host Alpine.js -->
<script defer src="/js/alpine.min.js"></script>

<!-- Viewport optimization -->
<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />

<AstroSeo
  title="Aniruddha Surse | Personal Blog & Portfolio"
  description="Official website of Aniruddha Surse. Explore my blog posts, projects, and professional journey. Software developer, tech enthusiast, and content creator."
  canonical={canonicalURL || "https://avsblogs.netlify.app/"}
  openGraph={{
    url: canonicalURL || "https://avsblogs.netlify.app/",
    title: "Aniruddha Surse | Personal Blog & Portfolio",
    description: "Official website of Aniruddha Surse. Explore my blog posts, projects, and professional journey. Software developer, tech enthusiast, and content creator.",
    images: [
      {
        url: "https://avsblogs.netlify.app/og-image.jpg",
        width: 1200,
        height: 630,
        alt: "Aniruddha Surse - Personal Website",
        type: "image/jpeg",
      },
    ],
    site_name: "Aniruddha Surse",
    type: "website",
    locale: "en_US",
  }}
  twitter={{
    handle: "@aniruddhasurse",
    site: "@aniruddhasurse",
    cardType: "summary_large_image",
  }}
/>

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />

<!-- Basic Meta Tags -->
<meta name="generator" content={Astro.generator} />
<meta name="description" content="Official website of Aniruddha Surse. Explore my blog posts, projects, and professional journey. Software developer, tech enthusiast, and content creator." />
<meta name="author" content="Aniruddha Surse" />
<meta name="keywords" content="Aniruddha Surse, software developer, tech blog, portfolio, web development, programming" />
<title>Aniruddha Surse | Personal Blog & Portfolio</title>

<!-- Favicons -->
<link rel="icon" href="/favicons/favicon.png" type="image/png" />
<link rel="apple-touch-icon" href="/favicons/favicon.png" />
<link rel="manifest" href="/favicons/site.webmanifest" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL || "https://avsblogs.netlify.app/"} />
<meta property="og:title" content="Aniruddha Surse | Personal Blog & Portfolio" />
<meta property="og:description" content="Official website of Aniruddha Surse. Explore my blog posts, projects, and professional journey. Software developer, tech enthusiast, and content creator." />
<meta property="og:image" content="https://avsblogs.netlify.app/og-image.jpg" />
<meta property="og:site_name" content="Aniruddha Surse" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL || "https://avsblogs.netlify.app/"} />
<meta property="twitter:title" content="Aniruddha Surse | Personal Blog & Portfolio" />
<meta property="twitter:description" content="Official website of Aniruddha Surse. Explore my blog posts, projects, and professional journey. Software developer, tech enthusiast, and content creator." />
<meta property="twitter:image" content="https://avsblogs.netlify.app/og-image.jpg" />
<meta property="twitter:creator" content="@aniruddhasurse" />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL || "https://avsblogs.netlify.app/"} />

<!-- Additional SEO -->
<meta name="robots" content="index, follow, max-image-preview:large" />
<meta name="googlebot" content="index, follow, max-image-preview:large" />
<meta name="google" content="notranslate" />
<meta name="revisit-after" content="7 days" />
<meta name="rating" content="general" />

<!-- Apple Touch Icon -->
<link rel="apple-touch-icon" sizes="180x180" href="/favicons/favicon.png" />

<!-- Theme Color for Mobile Browsers -->
<meta name="theme-color" content="#ffffff" />

<!-- For IE -->
<meta http-equiv="X-UA-Compatible" content="IE=edge" />

<!-- HTML in your document's head -->
<link rel="preconnect" href="https://rsms.me/" />
<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
<link
  href="https://api.fontshare.com/v2/css?f[]=jet-brains-mono@1,2&display=swap"
  rel="stylesheet"
/>
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Gilda+Display&display=swap"
  rel="stylesheet"
/>
<script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>

<!-- Preload critical fonts -->
<link rel="preload" href="https://rsms.me/inter/inter.css" as="style" />
<link rel="preload" href="https://fonts.googleapis.com/css2?family=Gilda+Display&display=swap" as="style" />

<!-- Font stylesheets with display swap -->
<link rel="stylesheet" href="https://rsms.me/inter/inter.css" media="print" onload="this.media='all'" />
<link href="https://api.fontshare.com/v2/css?f[]=jet-brains-mono@1,2&display=swap" rel="stylesheet" media="print" onload="this.media='all'" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=Gilda+Display&display=swap" rel="stylesheet" media="print" onload="this.media='all'" />

<!-- Fallback for browsers that don't support onload -->
<noscript>
  <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
  <link href="https://api.fontshare.com/v2/css?f[]=jet-brains-mono@1,2&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Gilda+Display&display=swap" rel="stylesheet" />
</noscript>

<!-- Structured Data for Person -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Aniruddha Surse",
  "url": "https://avsblogs.netlify.app/",
  "sameAs": [
    "https://www.linkedin.com/in/aniruddha-surse",
    "https://www.instagram.com/aniruddha.surse/",
    "https://github.com/aniruddhasurse"
  ],
  "jobTitle": "Software Developer",
  "worksFor": {
    "@type": "Organization",
    "name": "Self-employed"
  },
  "description": "Software developer, tech enthusiast, and content creator. Exploring web development, programming, and technology."
}
</script>

<!-- Structured Data for WebSite -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Aniruddha Surse",
  "url": "https://avsblogs.netlify.app/",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://avsblogs.netlify.app/search?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
}
</script>
